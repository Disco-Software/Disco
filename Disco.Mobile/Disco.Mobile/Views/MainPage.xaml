<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#1C142E"
             xmlns:vm="clr-namespace:Disco.Mobile.ViewModels"
             x:Class="Disco.Mobile.Views.MainPage">
    <ContentPage.BindingContext>
        <vm:UserViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <CarouselView BackgroundColor="Red" HeightRequest="100">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" BorderColor="#E6E0D2" CornerRadius="15">
                            <Image Source="{Binding }" Aspect="AspectFill"/>
                        </Frame>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>