<?xml version="1.0" encoding="utf-8" ?>
<renderers:CustomTabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            CenterButtonClicked="CustomTabbedPage_CenterButtonClicked"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            SelectedTabColor="#F5B970"
            UnselectedTabColor="#F3FEFF"
           xmlns:views="clr-namespace:Disco.Mobile.Views" 
           xmlns:renderers="clr-namespace:Disco.Mobile.Renderers" 
          NavigationPage.HasBackButton="False"
         BackgroundColor="#1C142E" 
         Title="DISCO"
         x:Class="Disco.Mobile.Views.MainTabbedPage">
    <NavigationPage.TitleView>
        <Label Text="DISCO" FontFamily="{StaticResource colonna}" FontSize="30" TextColor="White"/>
    </NavigationPage.TitleView>
    <renderers:CustomTabbedPage.ToolbarItems>
        <ToolbarItem IconImageSource="SearchIcon.png"/>
    </renderers:CustomTabbedPage.ToolbarItems>
    <!--Pages can be added as references or inline-->
    <views:MainPage IconImageSource="Home.png"/>
    <ContentPage IconImageSource="Base.png" BackgroundColor="Red"/>
    <ContentPage Title="Tab 2" />
    <ContentPage IconImageSource="Chat.png" />
    <ContentPage IconImageSource="Profile.png"/>
</renderers:CustomTabbedPage>