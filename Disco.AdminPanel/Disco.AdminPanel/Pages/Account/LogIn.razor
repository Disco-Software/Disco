<link rel="stylesheet" href="/css/login.css" />

@page "/log-in"
@layout EmptyLayout

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-200">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong login-card">
                    <div class="card-body p-5 text-center login-card__body">

                        <h1 class="mb-5 login-card__h1">DISCO</h1>
                        <h3 class="mb-5 login-card__h3">Log In</h3>

                        <div class="form-outline mb-4 login-card__group">
                            <label class="form-label login-card__label" for="typeEmailX-2">Email</label>
                            <input type="email" id="typeEmailX-2" class="form-control form-control-lg" />
                        </div>

                        <div class="form-outline mb-4 login-card__group">
                            <label class="form-label login-card__label" for="typePasswordX-2">Password</label>
                            <input type="password" id="typePasswordX-2" class="form-control form-control-lg" />
                        </div>

                        <input class="login-body__submit" type="submit" value="Log In"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

