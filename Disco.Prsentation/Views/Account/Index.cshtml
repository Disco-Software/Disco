@{
    Layout = "_NotAuthrizeLayout";
}
<link href="https://blogfonts.com/css/aWQ9MTE4MjIwJnN1Yj0yMjAmYz1jJnR0Zj1DT0xPTk5BLlRURiZuPWNvbG9ubmEtbXQ/Colonna MT.ttf" rel="stylesheet" type="text/css"/>
<div class="container-fluid">
    <div class="row login">
        <div class="offset-5 col-2 offset-5">
            <form class="login-form">
                <div class="form-group">
                    <h1 class="login-logo">DISCO</h1>
                </div>
                <div class="form-group login-group">
                    <label class="col-form-label">E-mail</label>
                    <input type="email" class="login-form__input" required />
                </div>
                <div class="form-group login-group">
                    <label class="col-form-label">Password</label>
                    <input type="password" class="login-form__input" required/>
                </div>
                <div clas="form-group">
                    <input type="submit" />
                </div>
            </form>
        </div>
    </div>    
</div>
